<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.devindow.myfitnessroutines.PlayRoutineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/imgMove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:contentDescription="Move"
            app:srcCompat="@mipmap/ic_launcher" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txtRoutineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routine"
                android:textSize="36sp"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txtMoveName" />

            <TextView
                android:id="@+id/txtMoveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move"
                android:textSize="24sp"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRoutineName"
                app:layout_constraintBottom_toTopOf="@+id/txtInstuctions" />

            <TextView
                android:id="@+id/txtInstuctions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textSize="14sp"
                android:maxLines="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMoveName"
                app:layout_constraintBottom_toTopOf="@+id/txtTimer" />

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtInstuctions"
                app:layout_constraintBottom_toTopOf="@+id/linButtons" />

            <LinearLayout
                android:id="@+id/linButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTimer"
                app:layout_constraintBottom_toTopOf="@id/txtNextTask">

                <ImageButton
                    android:id="@+id/btnPrev"
                    android:contentDescription="Previous"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:elevation="2dp"
                    android:onClick="onPrevClick"
                    app:srcCompat="@android:drawable/ic_media_previous" />

                <ImageButton
                    android:id="@+id/btnPlay"
                    android:contentDescription="Play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:backgroundTint="?attr/colorPrimary"
                    android:elevation="2dp"
                    android:onClick="onPlayClick"
                    app:srcCompat="@android:drawable/ic_media_play" />

                <ImageButton
                    android:id="@+id/btnNext"
                    android:contentDescription="Next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:elevation="2dp"
                    android:onClick="onNextClick"
                    app:srcCompat="@android:drawable/ic_media_next" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtNextTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next up: "
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtRemaining"
                app:layout_constraintTop_toBottomOf="@+id/linButtons"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/txtRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Remaining:"
                app:layout_constraintStart_toEndOf="@+id/txtNextTask"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtNextTask"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>